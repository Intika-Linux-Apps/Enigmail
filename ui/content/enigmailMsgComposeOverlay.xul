<!--
  This is the overlay that adds a menu and PGP buttons to the
  messenger compose window
-->

<?xml-stylesheet href="chrome://enigmail/skin/enigmail.css"
                 type="text/css"?>

<!DOCTYPE window [
<!ENTITY % enigmailDTD SYSTEM "chrome://enigmail/locale/enigmail.dtd" >
%enigmailDTD;
<!ENTITY % messengercomposeDTD SYSTEM "chrome://messenger/locale/messengercompose/messengercompose.dtd" >
%messengercomposeDTD;
]>

<overlay id="enigMsgComposeOverlay"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <script type="application/x-javascript" src="chrome://enigmail/content/enigmailMsgComposeHelper.js"/>
  <script type="application/x-javascript" src="chrome://enigmail/content/enigmailMsgComposeOverlay.js"/>

 <commandset id="msgComposeCommandUpdate"
              commandupdater="true"
              events="focus"
              oncommandupdate="Enigmail.msg.focusChange()"/>

  <popupset id="aTooltipSet"/>

  <keyset id="tasksKeys">
    <key id="key_enigSign" key="&enigmail.signedsend.key;"
         oncommand="Enigmail.msg.setSendMode('toggle-sign')" modifiers="accel, shift"/>
    <key id="key_enigEncrypt" key="&enigmail.encryptedsend.key;"
         oncommand="Enigmail.msg.setSendMode('toggle-encrypt')" modifiers="accel, shift"/>
  </keyset>

<!-- menu for all apps -->

  <menubar id="mail-menubar">

      <menu id="menu_Enigmail"
            label="&enigmail.openpgp.label;"
            accesskey="&enigmail.composemenu.accesskey;"
            insertbefore="tasksMenu">

        <menupopup id="menu_EnigmailPopup"
                   onpopupshowing="EnigmailFuncs.collapseAdvanced(this, 'hidden', Enigmail.msg.setMenuSettings(''))">

          <!-- signing state and entries to change it: -->
          <menu id="enigmail_compose_sign_menu"
                label="&enigmail.signing.label;">
            <menupopup id="menu_EnigmailSignPopup"
                   onpopupshowing="Enigmail.msg.setMenuSettings('a')">
              <menuitem id="enigmail_final_signDefaulta"
                  type="checkbox"
                  label="&enigmail.finalSignDefault.label;"
                  oncommand="Enigmail.msg.doPgpButton('final-signDefault');" />
              <menuitem id="enigmail_final_signYesa"
                  type="checkbox"
                  label="&enigmail.finalSignYes.label;"
                  oncommand="Enigmail.msg.doPgpButton('final-signYes');" />
              <menuitem id="enigmail_final_signNoa"
                  type="checkbox"
                  label="&enigmail.finalSignNo.label;"
                  oncommand="Enigmail.msg.doPgpButton('final-signNo');" />
            </menupopup>
          </menu>

          <!-- encryption state and entries to change it: -->
          <menu id="enigmail_compose_encrypt_menu"
                label="&enigmail.encryption.label;">
            <menupopup id="menu_EnigmailEncryptPopup"
                   onpopupshowing="Enigmail.msg.setMenuSettings('b')">
              <menuitem id="enigmail_final_encryptDefaultb"
                  type="checkbox"
                  label="&enigmail.finalEncryptDefault.label;"
                  oncommand="Enigmail.msg.doPgpButton('final-encryptDefault');" />
              <menuitem id="enigmail_final_encryptYesb"
                  type="checkbox"
                  label="&enigmail.finalEncryptYes.label;"
                  oncommand="Enigmail.msg.doPgpButton('final-encryptYes');" />
              <menuitem id="enigmail_final_encryptNob"
                  type="checkbox"
                  label="&enigmail.finalEncryptNo.label;"
                  oncommand="Enigmail.msg.doPgpButton('final-encryptNo');" />
            </menupopup>
          </menu>

          <!-- PGP/Mime state and entries to change it: -->
          <menuseparator advanced="true"/>
          <menu id="enigmail_compose_pgpmime_menu"
                advanced="true"
                label="&enigmail.pgpMime.label;">
            <menupopup id="menu_EnigmailPgpMimePopup"
                   advanced="true"
                   onpopupshowing="Enigmail.msg.setMenuSettings('c')">
              <menuitem id="enigmail_final_pgpmimeDefaultc"
                  type="checkbox"
                  label="&enigmail.finalPGPMimeDefault.label;"
                  oncommand="Enigmail.msg.doPgpButton('final-pgpmimeDefault');" />
              <menuitem id="enigmail_final_pgpmimeYesc"
                  type="checkbox"
                  label="&enigmail.finalPGPMimeYes.label;"
                  oncommand="Enigmail.msg.doPgpButton('final-pgpmimeYes');" />
              <menuitem id="enigmail_final_pgpmimeNoc"
                  type="checkbox"
                  label="&enigmail.finalPGPMimeNo.label;"
                  oncommand="Enigmail.msg.doPgpButton('final-pgpmimeNo');" />
            </menupopup>
          </menu>

